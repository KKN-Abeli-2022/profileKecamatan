<main class="max-w-screen-2xl mx-auto bg-white">
    <section class=" mx-auto w-full bg-gradient-to-b from-sky-200 to-white py-9">
        <div>
          <h1 class="text-3xl p-2 font-bold lg:text-4xl pt-10" data-aos="fade-left">Upload Informasi</h>
          <hr class="w-full mb-2 mx-auto  border-t-[3px] border-t-slate-700" />

        </div>
    
<% if (msg.length > 0) { %>
    <script>
            const Toast = Swal.mixin({
              toast: true,
              position: 'top-end',
              showConfirmButton: false,
              timer: 3000,
              timerProgressBar: true,
            didOpen: (toast) => {
              toast.addEventListener('mouseenter', Swal.stopTimer)
              toast.addEventListener('mouseleave', Swal.resumeTimer)
            }
            })
            Toast.fire({
                icon: 'success',
                title: '<%= msg %>'
              })
          </script>
<% } %>
  <div class=" my-10 mx-5 px-5 py-4
  bg-white shadow-md rounded">
    <form action="/dashboard/informasi" method="post"  enctype="multipart/form-data">
        <label for="judulBerita" class="font-bold">
            Judul Berita
        </label>
        <input type="text" id="judulBerita" placeholder="Judul Berita" class="block py-2 px-3 mt-3 mb-5 border w-full" name="judul">
        <input id="isi" type="hidden" name="isi">
        <trix-editor input="isi"></trix-editor>
        <input type="file" id="" class="mt-4 block pb-5" name="imageBerita">
        <center>
            <button type="submit" class="text-center mt-3 bg-sky-500 py-2 px-4 text-white hover:bg-sky-600 active:bg-sky-700 rounded-lg">Submit</button>
        </center>
    </form>
  </div>
</section>
</main>
