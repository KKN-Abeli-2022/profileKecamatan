<h1 class="font-bold text-4xl">Edit Profile</h1>
      <form action="/forgot-Password" method="post" class="mt-3">
        <label for="nama">
          <div class="text-slate-800 mb-2">Nama Lengkap</div>
          <input
            type="text"
            class="border border-black rounded shadow-lg py-1 px-3 focus:ring-1 focus:border-sky-600 focus:ring-sky-500 focus:outline-none w-full invalid:text-red-500 invalid:focus:border-red-500 invalid:focus:ring-red-500 peer"
            placeholder="Nama Lengkap"
            id="nama"
            name="nama"
          />
        <label for="username">
          <div class="text-slate-800 mb-2 mt-2">Username</div>
          <input
            type="text"
            class="border border-black rounded shadow-lg py-1 px-3 focus:ring-1 focus:border-sky-600 focus:ring-sky-500 focus:outline-none w-full invalid:text-red-500 invalid:focus:border-red-500 invalid:focus:ring-red-500 peer"
            placeholder="Username"
            id="username"
            name="username"
          />
        <label for="password">
          <div class="text-slate-800 mb-2 mt-2">Password</div>
          <input
            type="password"
            class="border border-black rounded shadow-lg py-1 px-3 focus:ring-1 focus:border-sky-600 focus:ring-sky-500 focus:outline-none w-full invalid:text-red-500 invalid:focus:border-red-500 invalid:focus:ring-red-500 peer"
            placeholder="Jumlah"
            id="password"
            name="password"
          />
        </label>
        <label for="konfirmasi">
          <div class="text-slate-800 mb-2 mt-2">Konfirmasi Password</div>
          <input
            type="password"
            class="border border-black rounded shadow-lg py-1 px-3 focus:ring-1 focus:border-sky-600 focus:ring-sky-500 focus:outline-none w-full invalid:text-red-500 invalid:focus:border-red-500 invalid:focus:ring-red-500 peer"
            placeholder="Konfirmasi"
            id="konfirmasi"
            name="konfirmasi"
          />
        </label>
        <button class="mx-auto block mt-5 bg-orange-500 px-4 py-1 rounded-md text-white hover:bg-orange-600 active:bg-orange-700">Update</button>
  
      </form>
    </div>
</div>


