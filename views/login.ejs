<main class="container flex items-center h-auto md:h-screen mx-auto">
  <div class="h-full w-3/4 bg-sky-200/30 hidden bg-cover bg-center lg:flex">
    <div class="m-auto">
      <img src="/assets/img/logo.png" alt="logo" width="100" class="mx-auto mb-6" />

      <h1 class="text-4xl text-white font-bold font-sansita tracking-widest bayangan">Kelurahan Abeli</h1>
    </div>
  </div>

  <div class="shadow-lg p-4 bg-slate-100/30 backdrop-blur-md max-w-sm my-2 mx-auto rounded-md md:my-auto lg:m-0 lg:rounded-none lg:w-full lg:h-full lg:flex-col">
    <a href="/" class="flex items-center hover:font-medium pb-5 lg:pb-0">
      <img src="assets/img/logo.png" alt="logo" width="30" class="" />
      <h3 class="ml-3 font-sansita">Kelurahan Abeli</h3>
    </a>
    <div class="w-full h-full flex">
      <div class="m-auto">
        <h3 class="text-center font-semibold text-slate-600 mb-3"><i class="bx bxs-user text-lg"></i> Masuk</h3>
        <hr class="mb-3 mx-16 lg:mb-11" />
      <form action="/login" method="post">
        <% if (err.length > 0 ) { %>
          <h1 class="text-red-500 mt-1 mb-2 text-lg font-bold"><%= err %></h1>
        <% } %>
        <label for="username" class="sm:mb-8">
          <div class="text-slate-800 mb-2">Username</div>
          <input
            type="text"
            class="border rounded shadow-lg py-1 px-3 focus:ring-1 focus:border-sky-600 focus:ring-sky-500 focus:outline-none w-full invalid:text-red-500 invalid:focus:border-red-500 invalid:focus:ring-red-500 peer"
            placeholder="Username"
            id="username"
            name="username"
          />
          <p class="text-red-500 invisible peer-invalid:visible mt-1 mb-2">Username tidak valid</p>
        </label>
        <label for="password" class="sm:mb-8">
          <div class="text-slate-800 mb-2">Password</div>
          <input type="password" class="border rounded shadow-lg py-1 px-3 focus:ring-1 focus:border-sky-600 focus:ring-sky-500 focus:outline-none w-full" placeholder="Password" id="password" name="password" />
        </label>
        <div class="text-right">
          <div class="inline-block mt-5 text-blue-700 cursor-pointer hover:text-blue-900 hover:underline" id="forgot-password">Lupa Password?</div>
        </div>
        <button class="mx-auto block mt-5 bg-orange-500 px-4 py-1 rounded-md text-white hover:bg-orange-600 active:bg-orange-700 sm:mt-10">Masuk</button>
        <p class="mt-5 text-center">Belum punya akun? <a href="/signup" class="text-blue-700 hover:text-blue-900 hover:underline">Daftar Sekarang</a></p>
      </form>
    </div>
  </div>
</main>


<div id="popup" class=" fixed justify-center items-center bg-black/50 top-0 left-0 right-0 bottom-0 hidden animate__animated animate__fadeIn">
  <div class="fixed bg-white p-9 rounded-xl shadow-xl animate__animated animate__backInUp">
    <div id="close-btn" class="absolute top-0 right-0 text-red-600 text-4xl w-14 h-14 rounded-full cursor-pointer flex justify-center items-center hover:bg-red-600 hover:text-white md:-top-5 md:-right-5 md:bg-white md:border md:border-black"><i class="fa-solid fa-xmark"></i></div>
    <h1 class="font-bold text-4xl">Lupa Password</h1>
    <p class="pt-5">Masukkan email Anda untuk mengirimkan pengaturan ulang kata sandi.</p>
    <form action="" class="mt-3">
      <label for="email">
        <div class="text-slate-800 mb-2">Email</div>
        <input
          type="email"
          class="border border-black rounded shadow-lg py-1 px-3 focus:ring-1 focus:border-sky-600 focus:ring-sky-500 focus:outline-none w-full invalid:text-red-500 invalid:focus:border-red-500 invalid:focus:ring-red-500 peer"
          placeholder="email"
          id="email"
          name="email"
        />
        <p class="text-red-500 invisible peer-invalid:visible mt-1 mb-2">Email tidak valid</p>
      </label>
      <button class="mx-auto block mt-3 bg-orange-500 px-4 py-1 rounded-md text-white hover:bg-orange-600 active:bg-orange-700">Kirim Permintaan</button>

    </form>

    
  </div>
</div>
