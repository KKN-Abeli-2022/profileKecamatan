<main class="container mx-auto bg-white mb-0">

    <div class="mt-16">
        <% for( let i = 0; i < data.length; i++ ) { %>
                        <%  if(data[i].verifiedEmail === 0) { %>
                            <div class="bg-red-600 px-6 py-3 mt-3 text-white">
                                <strong>ATTENTION !</strong> Please verify your account to continue using our services don't forget to check the spam if there isn't any email in your inbox.
                                    <a href="/dashboard/verify-email" class="underline hover:text-slate-600 transition duration-200">Re-send Verification Email</a>
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        <%} }%>
        <% if (msg.length>0) { %>
            <div class="bg-emerald-500 px-6 py-3 mt-3 text-white">
                <%= msg %>
            </div>
        <% }%>
        
    </div>

    <section class="mx-auto w-full bg-gradient-to-b from-sky-200 to-white">
      <h1 class="text-3xl text-center font-bold lg:text-4xl" data-aos="fade-left">Informasi Terbaru</h1>
      <hr class="w-1/4 mb-4 mx-auto border-t-[3px] border-t-slate-700" />
      <div class="container mt-7 w-full mx-auto md:flex md:justify-evenly md:flex-wrap">
        <% for( let i = 0; i < data.length; i++ ) { %>
          <div class="group mx-auto mb-7 w-[90%] rounded-lg shadow-md border-1 overflow-hidden my- transition ease-in-out duration-300 bg-white hover:bg-emerald-50 md:w-[30%] md:hover:shadow-under md:hover:translate-y-2" data-aos="flip-right">
            <div class="overflow-hidden">
            <img src="<%= data[i].gambar %>" alt="image" width="100%" class="object-cover object-center transition ease-in-out duration-300 group-hover:brightness-125 group-hover:scale-[1.1]" />
            </div>
            <div class="my-3 px-3">
              <h2 class="text-2xl font-bold"><%= data[i].judul %></h2>
              <h4 class="text-[0.8em]"><%= date(data[i].tgl_update) %>, ditulis oleh <span class="font-bold"><%= data[i].author %></span></h4>
              <p class="text-justify mt-5" name="isi"><%- convert(data[i].isi,140)%></p>
              <div class="flex justify-center">
                <a href="/berita/<%=data[i].id%>" class="inline-block px-3 py-2 bg-yellow-500 hover:bg-yellow-600 rounded-md mt-5 mb-4 text-white font-semibold mx-auto">Baca Selengkapnya</a>
              </div>
            </div>
          </div>
        <% } %>
    </section>
    
</main>
